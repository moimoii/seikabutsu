        <?php
        
        $file_name = "3-5.txt";
        
        $symbol = "<>";
        
        $usr_num = $_POST["usr_num"];
        $usr_name = $_POST["usr_name"];
        $usr_comment = $_POST["usr_comment"];
        $usr_password = $_POST["password"];
        $del_password = $_POST["password_del"];
        $date = date("Y/m/d H:i:s");
        $del_num = $_POST["delete_num"];

        $number = 1;
        $flag = 0;
        
        //投稿書き込み
        if (!empty($usr_name) && !empty($usr_comment) && !empty($usr_password)){
            if (empty($usr_num)){
                //新規投稿
                $sql = "SELECT * FROM db
	                WHERE id = (SELECT MAX(id) FROM db);";
                $result = $pdo->query($sql);
                if ($result){
                    foreach ($result as $value){
                        $number = $value[0] + 1;
                    }
                }else{
                    $number = 1;
                }
                $sql = "INSERT INTO db 
                        VALUES ('$number','$usr_name','$usr_comment','$date','$usr_password');";
                $stmt = $pdo->query($sql);
            }else{
                $number = $usr_num;
                $sql = "UPDATE db 
                        SET id = '$number', name = '$usr_name', comment = '$usr_comment', date = '$date', password ='$usr_password'
                        WHERE id = '$usr_num';";
                $stmt = $pdo->query($sql);
                
            }
        }
        
        //投稿削除
        if (!empty($del_num)){
            $sql = "SELECT password FROM db
                    WHERE id = '$del_num';";
            $result = $pdo->query($sql);
            foreach ($result as $value){
                $pass = $value[0];
            }
            if ($del_password == $pass){
                $sql = "DELETE FROM db
                    WHERE id = '$del_num';";
                $stmt = $pdo->query($sql);
            }else{
                $flag = 1;
            }
        }
        
        
        if ($flag == 1){
            echo "パスワードが違います"."<br>";
        }
        
        echo "-------------------------------------"."<br>";
        
        //投稿表示
        $sql = "SELECT * FROM db;";
        $result = $pdo->query($sql);
        foreach ($result as $value){
            echo $value[0]."<br>";
            echo $value[1]."<br>";
            echo $value[2]."<br>";
            echo $value[3]."<br>";
            echo $value[4]."<br>";
        }
        
